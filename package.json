{
    "name": "avkonnect-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "rimraf ./build && tsc",
        "lint": "eslint . --ext .ts --max-warnings=0",
        "lint:fix": "eslint . --ext .ts --fix --max-warnings=0",
        "prettier:fix": "prettier --config .prettierrc --fix \"src/\"",
        "start": "node ./build/index.js",
        "start:server": "node ./build/server.js",
        "start:dev": "nodemon --files ./src/server.ts ",
        "serverless:credentials": "eval $(grep '^AWS_KEY' .env) && eval $(grep '^AWS_SECRET' .env) && serverless config credentials --provider aws --key ${AWS_KEY} --secret ${AWS_SECRET}",
        "serverless:deploy:prod": "serverless deploy --stage prod",
        "serverless:deploy:dev": "serverless deploy --stage dev"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,js,css,html}": [
            "npm run prettier:fix",
            "npm run lint:fix"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@masuviproductions/avkonnect-auth": "2.3.1",
        "aws-sdk": "^2.1043.0",
        "axios": "^0.24.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "dynamoose": "^2.8.2",
        "express": "^4.17.1",
        "express-validator": "^6.13.0",
        "helmet": "^4.6.0",
        "loglevel": "^1.8.0",
        "mongoose": "^6.2.1",
        "node-cache": "^5.1.2",
        "path-to-regexp": "^6.2.0",
        "request": "^2.88.2",
        "serverless-http": "^2.7.0",
        "uuidv4": "^6.2.12"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "eslint": "^8.2.0",
        "husky": "^4.3.8",
        "lint-staged": "^12.0.2",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "serverless": "^2.66.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
