{
    "name": "avconnect-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "rimraf ./build && tsc",
        "lint": "eslint . --ext .ts --max-warnings=0",
        "lint:fix": "eslint . --ext .ts --fix --max-warnings=0",
        "prettier:fix": "prettier --config .prettierrc --fix \"src/\"",
        "start": "node ./build/index.js",
        "start:dev": "nodemon",
        "serverless:credentials": "serverless config credentials --provider aws --key ${AWS_KEY} --secret ${AWS_SECRET}",
        "serverless:deploy": "serverless deploy"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,js,css,html}": [
            "npm run prettier:fix",
            "npm run lint:fix"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "loglevel": "^1.8.0",
        "serverless-http": "^2.7.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "eslint": "^8.2.0",
        "husky": "^4.3.8",
        "lint-staged": "^12.0.2",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "serverless": "^2.66.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
